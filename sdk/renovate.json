{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every monday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor and patch updates",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": null,
      "automerge": false
    }
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)build\\.gradle(\\.kts)?$",
      "(^|/)settings\\.gradle(\\.kts)?$",
      "(^|/)gradle\\.properties$"
    ]
  },
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
